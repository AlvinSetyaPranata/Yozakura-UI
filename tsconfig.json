{
  "compilerOptions": {
    "declaration": true, // Generate declaration files (.d.ts)
    "emitDeclarationOnly": true,
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["src"]
}
